@model Logging_System.Models._Password

@{

    Layout = "~/Views/Shared/MasterPage.cshtml";
}



<html !doctype>
<head>
    <title>Register Learner</title>
    <link href="~/Css/Learner.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Javascript/Upload.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>


</head>
<body>


    <div class="container">


        <form class="form-horizontal" method="post" action="/_ChangePassword/CheckChecks">
            <h2>Change Password Portal</h2>
            <div class="form-group">

                <div class="control-label col-sm-6" style="color:#ff0000; text-align:center;">
                    @ViewBag.Error
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Username:</label>
                <input type="text" class="form-control" name="txtUsername" id="txtUsername" placeholder="Enter Username" style="width:200px" autofocus>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2"> Current | Old Password:</label>
                <input type="password" class="form-control" id="txtPassword" name="txtPassword" placeholder="Enter Password" style="width:200px">
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2">
                    <input type="submit" name="btnsubmit" class="btn btn-primary" value="Confirm Details" />
                    <input type="button" name="submit" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("Sign", "Sign")'" />

                </div>
            </div>
        </form>




    </div>


</body>
</html>