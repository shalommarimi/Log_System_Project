@{
    //ViewBag.Title = "Downloads";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
@model List<string>

<!Doctype html>
<html>


<head>
    <title>Download</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

    <link href="~/Css/General.css" rel="stylesheet" />
</head>
<body>

    <div class="Wrapper">
       
        <br />
        <br /><br />
        <h4>Learners Logbooks</h4>
        <br />

        <div class="container-downloads">
           
            <table border="1" ; style="border-color:#f39c12; border-style:double; margin:5px;">
                @using (Html.BeginForm("ProcessForm",
         "Mentor", FormMethod.Post))
                {
                    foreach (string file in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox"
                                       name="selectedfiles" value="@file" />
                            </td>
                            <td>@file</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2">
                            <input type="submit" class="btn btn-primary" value="Download Selected Weekly Logbooks" />
                        </td>
                    </tr>
                }
            </table>
            <div class="buttons">


                <input type="button" name="submit" class="btn btn-warning" value="Logout" onclick="location.href='@Url.Action("Logout", "Mentor")'" />
                <input type="button" name="submit" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("Sign", "Sign")'" />
                <input type="button" name="submit" class="btn btn-primary" value="Monthly Evaluation Forms" onclick="location.href='@Url.Action("DownloadMEF", "Mentor")'" />
            </div>

        </div>


    </div>



</body>
</html>

