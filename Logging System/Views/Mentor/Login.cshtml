
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Mentor Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Css/Learner.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <br />
    <div class="container">
        <div class="formlog">

            <form class="form-horizontal" method="post" action="/Mentor/DoLogin">
                <h2 style="font-weight:bold">Mentor Login Portal</h2>
               

                <div class="form-group">
                    <div class="form-group">

                        <div class="control-label col-xs-4" style="color:#ff0000; text-align:center;">
                            @ViewBag.Error
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon" id="sizing-addon3">Username</span>
                        <input type="text" name="txtUsername" id="txtUsername" class="form-control" aria-describedby="sizing-addon3" style="width:200px">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon" id="sizing-addon3">Password</span>
                        <input type="password" name="txtPassword" id="txtPassword" class="form-control" aria-describedby="sizing-addon3"style="width:200px">
                    </div>
                </div>


                <div class="form-group">
                    <div class="input-group">
                        <input type="submit" name="btnsubmit" style="margin:3px;" class="btn btn-primary" value="Login" />
                        <input type="button" name="btnHome" style="margin:3px;" class="btn btn-primary" value="Reset Password" onclick="location.href='@Url.Action("Reset_", "Reset_")'" />
                        <input type="button" name="submit" style="margin:3px;" class="btn btn-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'" />
                    </div>
                </div>
            </form>

            
        </div>


        </div>

</body>
</html>

