@model Logging_System.Models.Reset

@{
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

<html !DOCTYPE>
<head>
    <title>Register Learner</title>
    <link href="~/Css/Learner.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Javascript/Upload.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>


</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

           
            <hr />
            @Html.ValidationSummary(true)
            <br />
            <br /> 
            <br /> 

                <div class="col-sm-2" style="color:#f21010;">
                    @ViewBag.Error
                 
                </div>
            <text style="color:blue">@ViewBag.Err</text>

            <br />
            <br />
            <br />
            <br />
            <form class="form-horizontal" method="post" action="/Reset/CheckRSAID">
                <div class="form-group">
                   

                    @Html.LabelFor(model => model.Email, htmlAttributes: new { id = "txtPassword", @class = "control-label col-sm-2" })
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.Email, new { id = "txtPassword", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">


                    @Html.LabelFor(model => model.RSAID, htmlAttributes: new { id = "txtUsername", @class = "control-label col-sm-2" })
                    <div class="col-sm-2">
                        @Html.PasswordFor(model => model.RSAID, new { id = "txtUsername", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RSAID)
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Reset Password" class="btn btn-primary" />
                        <input type="button" name="submit" class="btn btn-primary" value="Login Page" onclick="location.href='@Url.Action("Login", "Learner")'" />
                    </div>
                </div>
                </form>
</div>
    }


</body>
</html>
